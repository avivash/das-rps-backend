// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  uid                  String        @id
  commit1              String
  commit2              String
  player1              String
  player2              String
  choice1              Int
  choice2              Int
  salt1                String
  salt2                String
  relevantAttestations Attestation[]
  declined             Boolean       @default(false)
}

model Attestation {
  uid              String  @id
  data             String
  recipient        String
  attester         String
  schemaId         String
  isOffchain       Boolean @default(true)
  refUID           String
  signature        String
  gameUID          String
  relevantTo       Game    @relation(fields: [gameUID], references: [uid])
  onChainTimestamp Int     @default(0)
}

model Player {
  address String   @id
  results Result[]
  elo     Int      @default(1000)
}

model Result {
  status        Int
  player        Player @relation(fields: [playerAddress], references: [address])
  playerAddress String
  gameUID       String
  timestamp     Int

  @@id([gameUID, playerAddress])
}
