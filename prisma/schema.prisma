// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  uid                  String        @id
  commit               String        @unique
  player1              String
  player2              String
  player1Choice        Int
  player2Choice        Int
  status               Int
  relevantAttestations Attestation[]
}

model Attestation {
  uid              String  @id
  data             String
  recipient        String
  attester         String
  schemaId         String
  isOffchain       Boolean @default(true)
  refUID           String
  signature        String
  gameUID          String
  relevantTo       Game    @relation(fields: [gameUID], references: [uid])
  onChainTimestamp Int     @default(0)
}

model Player {
  address String   @id
  wins    String[]
  ties    String[]
  losses  String[]
  elo     Int      @default(1000)
}
